---
import { type Playlist } from "@/lib/data.ts";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const {id, title, cover, artists, color} = playlist;

const artistsString = artists.join(", ");
---

<a
href={`/playlist/${id}`}
class="playlist-item transition-all duration-300 flex relative p-2 overflow-hidden items-center gap-4 rounded-md hover:bg-zinc-800 shadow-lg hover:shadow-xl bg-zinc-500/30"
>
<picture class="w-12 h-12 flex-none">
    <img
    src={cover}
    alt={`Cover of ${title} by ${artistsString}`}
    class="object-cover w-full h-full rounded-md"
    />
</picture>
<div class="flex flex-auto flex-col truncate">
    <h4 class="font-semibold text-sm">
        {title}
    </h4>

    <span class="text-xs text-gray-500">
        {artistsString}
    </span>
</div>

</a>